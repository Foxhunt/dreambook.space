{
    "name": "dreambook.space",
    "alias": [
      "dreambook.space"
    ],
    "version": 2,
    "regions": ["all"],
    "builds": [
        { "src": "www/package.json", "use": "@now/next" },
        { "src": "api/*.ts", "use": "@now/node@0.5.1" }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/api/$1.ts"
        },
        {
          "src": "/(.*)",
          "dest": "/www/$1",
          "headers": {
            "x-request-path": "$1"
          }
        }
    ],
    "env": {
      "MONGODB_NAME": "@dreambook_mongo_name",
      "MONGODB_USER": "@dreambook_mongo_user",
      "MONGODB_PASS": "@dreambook_mongo_pass"
    }
}
